<%- include('../partials/header.ejs') %>



<h1>edit new e-book info </h1>


<form action="/kindle/<%= kindle.id %>?_method=PUT" method="post">
	<input type="hidden" name="_method" value="PUT">
	<fieldset>
		<label for="title">Title:</label>
		<input id="title" type='text' name='title' placeholder="Enter book title"/>	
	</fieldset>
	<fieldset>
		<label for="author">Author:</label>
		<input id="author" type='text' name='author' placeholder="Enter the author"/>	
	</fieldset>
	<fieldset>
		<label for="link">Amazon link:</label>
		<input id="link" type='text' name='link' placeholder="link to book purchase site!"/>	
	</fieldset>
	<button>Update Kindle</button>
</form>






